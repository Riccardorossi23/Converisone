<Window x:Class="Converisone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converisone"
        mc:Ignorable="d"
        Title="MainWindow" Height="511" Width="450">
    <Grid>
        <ComboBox x:Name="cmbName" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="205" Height="60" FontSize="18">
            <ComboBoxItem >Decimale</ComboBoxItem>
            <ComboBoxItem >Binario</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="txtValori" HorizontalAlignment="Left" Height="30" Margin="255,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="140" TextChanged="TextBox_TextChanged"/>
        <Button Content="Convertitore" FontWeight="Bold" HorizontalAlignment="Left" Height="50" Margin="110,185,0,0" VerticalAlignment="Top" Width="230" FontSize="24" Click="Button_Click"/>
        <TextBox x:Name="TxtConverti"  HorizontalAlignment="Left" Height="45" Margin="110,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
        <Label  FontSize="20" Content="scelta di conversione:" HorizontalAlignment="Left" Height="45" Margin="10,10,0,0" VerticalAlignment="Top" Width="205"/>

    </Grid>
</Window>
